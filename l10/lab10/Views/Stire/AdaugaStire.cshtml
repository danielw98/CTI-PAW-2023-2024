@model StireModel
@{
    ViewData["Title"] = "Adauga Stire Lab07 MVC";
    List<SelectListItem> categorii = ViewBag.Categorii;
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Titlu" class="control-label">Title</label>
            <input asp-for="@Model.Titlu" class="form-control" />
            <span asp-validation-for="@Model.Titlu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Lead" class="control-label">Lead</label>
            <input asp-for="@Model.Lead" class="form-control" />
            <span asp-validation-for="@Model.Lead" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Autor" class="control-label">Author</label>
            <input asp-for="@Model.Autor" class="form-control" />
            <span asp-validation-for="@Model.Autor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Continut" class="control-label">Content</label>
            <input asp-for="@Model.Continut" class="form-control" />
            <span asp-validation-for="@Model.Continut" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Data" class="control-label">Date</label>
            <input asp-for="@Model.Data" class="form-control" />
            <span asp-validation-for="@Model.Data" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CategorieId" class="control-label">Category Id</label>
            <select asp-for="@Model.CategorieId" asp-items="@categorii" class="form-control"></select>
            <span asp-validation-for="@Model.CategorieId" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" value="Adauga" />
        <br />
    </form>
</div>